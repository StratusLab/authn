<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

  <display-name>StratusLab Authentication Proxy</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <security-constraint>

    <web-resource-collection>
      <web-resource-name>JAAS Role</web-resource-name>
      <url-pattern>/debug</url-pattern>
      <url-pattern>/xmlrpc</url-pattern>
    </web-resource-collection>

    <auth-constraint>
      <role-name>cloud-access</role-name>
    </auth-constraint>

    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>

  </security-constraint>

  <login-config>
    <auth-method>CLIENT-CERT</auth-method>
    <realm-name>StratusLab Certificate Realm</realm-name>
  </login-config>

  <security-role>
    <role-name>cloud-access</role-name>
  </security-role>

  <servlet>
    <servlet-name>DebugServlet</servlet-name>
    <servlet-class>eu.stratuslab.authn.DebugServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DebugServlet</servlet-name>
    <url-pattern>/debug</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OneProxyServlet</servlet-name>
    <servlet-class>eu.stratuslab.authn.OneProxyServlet</servlet-class>
    <init-param>
      <param-name>enabledForExtensions</param-name>
      <param-value>true</param-value>
      <description>Flag for enabling vendor extension for XML-RPC.</description>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>OneProxyServlet</servlet-name>
    <url-pattern>/xmlrpc</url-pattern>
  </servlet-mapping>

</web-app>
