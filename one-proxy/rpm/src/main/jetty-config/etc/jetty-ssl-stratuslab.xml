<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<!-- =============================================================== -->
<!-- Configure SSL with Grid Certificates for Jetty                  -->
<!-- =============================================================== -->
<Configure id="Server" class="org.eclipse.jetty.server.Server">

  <Call name="addConnector">
    <Arg>
      <New class="org.eclipse.jetty.server.ssl.SslSelectChannelConnector">
	<Arg>
	  <New class="eu.stratuslab.ssl.GridSslContextFactory">

            <!-- 
            <Set name="CaDirectory"></Set>
            <Set name="NamespaceCheckingMode"></Set>
            <Set name="UpdateInterval"></Set>
            -->

	    <Set name="KeyManagerPassword">jettycred</Set>

	    <Set name="KeyStorePath"><Property name="jetty.home" default="." />/etc/jetty.jks</Set>
	    <Set name="KeyStorePassword">jettycred</Set>

	    <Set name="TrustStore"><Property name="jetty.home" default="." />/etc/jetty.jks</Set>
	    <Set name="TrustStorePassword">jettycred</Set>
	  </New>
	</Arg>
	<Set name="Port">2634</Set>
	<Set name="MaxIdleTime">30000</Set>
	<Set name="Acceptors">2</Set>
	<Set name="AcceptQueueSize">100</Set>
      </New>
    </Arg>
  </Call>

</Configure>
