  <Call name="addConnector">
    <Arg>
      <New class="eu.stratuslab.ssl.GridSslSelectChannelConnector">
        <Set name="SslTrustManagerFactoryAlgorithm">GridTM</Set>
        <Set name="Port">2634</Set>
        <Set name="maxIdleTime">30000</Set>
        <Set name="Acceptors">2</Set>
        <Set name="AcceptQueueSize">100</Set>
        <Set name="Keystore"><Property name="jetty.home" default="." />/etc/jetty.jks</Set>
        <Set name="Password">jettycred</Set>
        <Set name="KeyPassword">jettycred</Set>
        <Set name="truststore"><Property name="jetty.home" default="." />/etc/jetty.jks</Set>
        <Set name="trustPassword">jettycred</Set>
        <Set name="wantClientAuth">true</Set>
      </New>
    </Arg>
  </Call>
</Configure>
